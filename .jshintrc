// http://jshint.com/docs/options/

{
  // Enforcing options:
  "curly": true,
  "eqeqeq": true,
  "indent": 2,
  "latedef": true,
  "newcap": true,
  "noempty": true,
  "nonew": true,
  "quotmark": true,
  "undef": true,
  "unused": true,
  "globals": {
    "define": true
  },
  
  // Relaxing options:
  "eqnull": true,
  
  // Environments:
  "browser": true,
  "jquery": true,
  "node": true
}